@model IEnumerable<FshopASP.Models.Product>

@{
    ViewBag.title = "Chi tiết";
    Layout = "_LayoutTemplate";

}
@section Top{
    <partial name="_header" />
}
@section Bottom{
    <partial name="_footer" />
}
<!-- breadcrumb-section -->
<div class="breadcrumb-section breadcrumb-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="breadcrumb-text">
                    <p>See more Details</p>
                    <h1>Single Product</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end breadcrumb section -->
<!-- single product -->
<div class="single-product mt-150 mb-150">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-5">
                    <div class="single-product-img">
                        <img src="~/assets/img/products/@item.Image" alt="">
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="single-product-content">
                        <h3>@item.Name</h3>
                        <p class="single-product-pricing"><span>$@item.Price / @item.Unit</span></p>
                        <p>@item.Description</p>
                        <div class="single-product-form">
                            <form action="index.html">
                                <input type="number"  placeholder="1">
                            </form>
                            <a asp-controller="Carts" asp-action="AddToCart"asp-route-id="@item.Id" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                            <p><strong>Categories: </strong>Fruits, Organic</p>
                        </div>
                        <h4>Share:</h4>
                        <ul class="product-share">
                            <li><a href=""><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href=""><i class="fab fa-twitter"></i></a></li>
                            <li><a href=""><i class="fab fa-google-plus-g"></i></a></li>
                            <li><a href=""><i class="fab fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- end single product -->
<!-- more products -->
<div class="more-products mb-150">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center">
                <div class="section-title">
                    <h3><span class="orange-text">Sản phẩm</span> liên quan</h3>
                    <p>Nó rất ngon đó</p>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in ViewBag.ListPr)
            {
                <div class="col-lg-4 col-md-6 text-center">
                    <div class="single-product-item">
                        <div class="product-image">
                            <a  asp-controller="Products" asp-action="Details"asp-route-id="@item.Id" ><img src="~/assets/img/products/@item.Image" alt=""></a>
                        </div>
                        <h3>@item.Name</h3>
                        <p class="product-price"><span>1kg / @item.Unit</span> @item.Price$ </p>
                        <a  asp-controller="Carts" asp-action="AddToCart" asp-route-id="@item.Id" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                    </div>
                </div>


            }
        </div>
    </div>
</div>
<!-- end more products -->
<!-- logo carousel -->
<div class="logo-carousel-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="logo-carousel-inner">
                    <div class="single-logo-item">
                        <img src="~/assets/img/company-logos/1.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/assets/img/company-logos/2.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/assets/img/company-logos/3.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/assets/img/company-logos/4.png" alt="">
                    </div>
                    <div class="single-logo-item">
                        <img src="~/assets/img/company-logos/5.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end logo carousel -->